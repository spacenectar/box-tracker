{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "out-tsc/storybook",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx"
  },
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": [
    "**/*.stories.tsx",
    "**/*.stories.mdx",
    ".storybook/*.ts",
    ".storybook/preview.tsx",
    ".storybook/**/*.tsx",
    ".storybook/doc-blocks/**/*.tsx",
  ]
}
