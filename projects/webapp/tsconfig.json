{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "incremental": true,
    "allowJs": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "noEmit": true,
    "esModuleInterop": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../projects/components/**/*"
  ],
  "exclude": ["node_modules", "**/*.stories.ts", "**/*.stories.js"],
  "references": [
    {
      "path": "./tsconfig.storybook.json"
    }
  ]
}
