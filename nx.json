{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "production": [
      "default"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/.github/workflows/ci.yml"
    ]
  },
  "nxCloudId": "67a3801c1884752a7b9a3e5e",
  "plugins": [
    "@nxlv/python",
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json",
          "buildDepsName": "build-deps",
          "watchDepsName": "watch-deps"
        }
      }
    }
  ],
  "targetDefaults": {
    "install": {
      "dependsOn": [
        "^install"
      ]
    },
    "exec": {
      "dependsOn": [
        "^exec"
      ]
    },
    "serve": {
      "cache": false
    },
    "test": {
      "inputs": [
        "default",
        "^default"
      ]
    },
    "lint": {
      "inputs": [
        "default",
        "^default"
      ]
    },
    "format": {
      "inputs": [
        "default",
        "^default"
      ]
    }
  },
  "projects": {
    "backend": {
      "root": "projects/backend",
      "tags": [
        "scope:api, scope:backend, scope:webapp"
      ]
    },
    "webapp": {
      "root": "projects/webapp",
      "tags": [
        "scope:ui, scope:webapp, scope:website"
      ]
    },
    "theme": {
      "root": "projects/theme",
      "tags": [
        "scope:ui, scope:webapp, scope:website"
      ]
    },
    "components": {
      "root": "projects/components",
      "tags": [
        "scope:ui, scope:webapp, scope:website"
      ]
    },
    "assets": {
      "root": "projects/assets",
      "tags": [
        "scope:ui, scope:webapp, scope:website"
      ]
    }
  }
}